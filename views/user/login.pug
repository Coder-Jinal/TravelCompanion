doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login - Travel Companion
    link(rel="stylesheet", href="/styles/style.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  body
    include ../header.pug
    
    main.container
      h1 Login
      if error
        .alert.alert-danger= error
      if success
        .alert.alert-success.pswresetsuccess= success
      form(method="POST" action="/user/login")
        .form-group
         label(for="email") Email
         input.form-control(type="email" name="email" id="email" required)
        .form-group
         label(for="password") Password
         input.form-control(type="password" name="password" id="password" required)
        button.btn.btn-primary(type="submit") Login
        p.mt-3.register-link 
         a(href="/user/forgot") Forgot Password? | 
         a(href="/user/register") Don't have an Account?
    
    include ../footer.pug