doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title FAQs - Travel Companion
    link(rel="stylesheet", href="/styles/style.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    include ../header.pug
    
    main.faq-container
      h1.faq-heading Frequently Asked Questions
      
      .faq-list
        - var faqs = []
        - faqs.push({question: 'How do I create an account?', answer: 'Click on "Register" in the top navigation and fill out the form.'})
        - faqs.push({question: 'Is Travel Explorer free to use?', answer: 'Yes, our basic services are completely free!'})
        - faqs.push({question: 'How do I save my trip plans?', answer: 'After searching, click the "Save Trip" button when logged in.'})
        - faqs.push({question: 'Can I share my trip with others?', answer: 'Yes, from your trip overview page you can generate a shareable link.'})
        
        each faq in faqs
          .faq-item
            h2= faq.question
            p= faq.answer

    script.
      document.querySelectorAll('.faq-item h2').forEach(question => {
        question.addEventListener('click', () => {
          const faqItem = question.parentElement;
          faqItem.classList.toggle('active');
          
          // Close other open FAQs when opening a new one
          if (faqItem.classList.contains('active')) {
            document.querySelectorAll('.faq-item').forEach(item => {
              if (item !== faqItem && item.classList.contains('active')) {
                item.classList.remove('active');
              }
            });
          }
        });
      });

    include ../footer.pug